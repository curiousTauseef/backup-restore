doctype html
html
  head
   style(type='text/css').
     .alert {
       color:green
     }
     table {
      width:100%;

     }
     th {
      text-align:left;
     }
     td {
      font-family: "Lucida Console", Monaco, monospace
     }
    
  body
    h1.alert Backup of #{process.env.BACKUP_INSTANCE_NAME} was successful.
    table
       thead
         tr
            th Time
            th Backup Location
            th Backup size
       tbody
         tr
            td #{backed_up.time}
            td #{backed_up.file}
            td #{backed_up.size}

    if purged.length
        h1 Purged Backup(s)
        p #{purged.length} old backups purged.
        table
            thead
                tr
                    th Time
                    th Backup Location
                    th Backup size
            tbody
                each p in purged
                    tr
                        td #{p.time}
                        td #{p.file}
                        td #{p.size}
    h1 File system status
    each obj, d in disk.before
        h2 Disk #{d}
        table
            thead
                tr
                    th 
                    th Backup start
                    th During backup
                    th Backup completed
            tbody
                each attr in ['mountpoint', 'drive', 'available', 'used', 'usedPer']
                    tr
                        td #{attr}
                        td #{disk.before[d][attr]}
                        td #{disk.store[d][attr]}
                        td #{disk.after[d][attr]}